
print ('введите координаты X')
x = int(input())
print('введите координаты y')
y = int(input())
if x>0 and y>0: 
  print('точка в 1 четверти')
elif x<0 and y>0:
  print('точка во 2 четверти')
elif x<0 and y<0:
  print('точка в 3 четверти')
elif x>0 and y<0:
  print('точка в 4 четверти')
else:
  print('x = 0 и y= 0 ')         